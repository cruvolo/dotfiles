# git dotfiles management
alias dotfiles	'git --git-dir=$HOME/src/dotfiles.git --work-tree=$HOME'

alias	ls	ls-F
alias	vi	vim
unalias su
alias	su	"`which su` -"
alias	rdiff	'diff -urN -x \*.orig -x \*.rej -x \*~ -x \*.bak -x .\* $1 $2'
alias	beep	echo ""
alias	grep	grep --color=auto

